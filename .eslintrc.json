{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "camelcase": 1,
        "curly": 1,
        "no-unused-vars": 1,
        "no-console": 0,
        "block-scoped-var": 1,
        "space-before-function-paren": ["error", "never"]
    }
}
